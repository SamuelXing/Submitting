<a href="/piazza/<%= question._id%>">
    <div class="question-shortcut" style="border-radius: 5px; text-align: left;">
        <div class="panel-heading-piazza" style="padding-top:3px; padding-bottom:0px;white-space:nowrap;overflow:hidden;text-overflow:ellipsis;">
            <span class="glyphicon glyphicon-question-sign" aria-hidden="true"></span>
            <strong><%= question.title %></strong>
        </div>
        <div class="panel-body" style="padding-top:3px; padding-bottom:0px; overflow-y: hidden; height: 60px;">
            <%- question.content %>
        </div>
    </div>

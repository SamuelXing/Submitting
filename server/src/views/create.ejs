<%- include('header') %>

<div class="inner cover">
    <%- include('components/notification') %>
    <div class = "row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="panel panel-profile no-bg">
                <div class="panel-heading">
                    <h2 class="panel-title heading-sm pull-left">
                        New Post
                    </h2>
                </div>
                <div class="panel-body">
                    <form class="form_post" method="post" enctype="multipart/form-data" action="/piazza">
                        <div class="form-group">
                            <label for="title" class="col-md-2 control-label">Title</label>
                            <div class="col-md-10" style="margin-bottom: 10px;">
                                <input type = "text" class="form-control" name="title" id = "title" placeholder="Title">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="content" class="col-md-2 control-label">Content</label>
                            <div class="col-md-10" style="margin-bottom: 10px;">
                                <textarea type="text" class="form-control" name="content" id = "content" placeholder="New Post" rows="10"> </textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10" style="margin-bottom: 10px;">
                                <button type="submit" class="btn btn-default">Post</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('footer') %>